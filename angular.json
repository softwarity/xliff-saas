{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "analytics": false,
    "cache": {
      "enabled": true
    }
  },
  "newProjectRoot": "projects",
  "schematics": {
    "@schematics/angular:component": {
      "changeDetection": "OnPush",
      "style": "scss"
    }
  },
  "projects": {
    "xliff-translator": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "i18n": {
        "sourceLocale": {"code": "en", "subPath": "en"},
        "locales": {
          "fr": {
            "translation": "src/locale/messages.fr.xlf",
            "subPath": "fr"
          },
          "ru": {
            "translation": "src/locale/messages.ru.xlf",
            "subPath": "ru"
          },
          "es": {
            "translation": "src/locale/messages.es.xlf",
            "subPath": "es"
          },
          "zh": {
            "translation": "src/locale/messages.zh.xlf",
            "subPath": "zh"
          },
          "vi": {
            "translation": "src/locale/messages.vi.xlf",
            "subPath": "vi"
          },
          "de": {
            "translation": "src/locale/messages.de.xlf",
            "subPath": "de"
          },
          "he": {
            "translation": "src/locale/messages.he.xlf",
            "subPath": "he"
          }
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "prerender": {
              "routesFile": "routes.txt",
              "discoverRoutes": false
            },
            "allowedCommonJsDependencies": [
              "whatwg-url",
              "@supabase/supabase-js"
            ],
            "outputPath": "dist/xliff-translator",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": [
              "@angular/localize/init"
            ],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/global_styles.css"
            ],
            "scripts": [],
            "server": "src/main.server.ts",
            "ssr": {
              "entry": "src/server.ts"
            }
          },
          "configurations": {
            "en": {"localize": ["en"]},
            "fr": {"localize": ["fr"], "deleteOutputPath": false},
            "de": {"localize": ["de"], "deleteOutputPath": false},
            "zh": {"localize": ["zh"], "deleteOutputPath": false},
            "es": {"localize": ["es"], "deleteOutputPath": false},
            "vi": {"localize": ["vi"], "deleteOutputPath": false},
            "he": {"localize": ["he"], "deleteOutputPath": false},
            "ru": {"localize": ["ru"], "deleteOutputPath": false},
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.production.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "localize": ["en"],
              "baseHref": "/en/",
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "xliff-translator:build:production"
            },
            "development": {
              "buildTarget": "xliff-translator:build:development"
            },
            "fr": {
              "buildTarget": "xliff-translator:build:fr"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "ng-extract-i18n-merge:ng-extract-i18n-merge",
          "options": {
            "buildTarget": "xliff-translator:build",
            "format": "xlf",
            "outputPath": "src/locale",
            "includeContext": true,
            "resetTranslationState": true,
            "trim": true,
            "targetFiles": [
              "messages.fr.xlf",
              "messages.vi.xlf",
              "messages.de.xlf",
              "messages.he.xlf",
              "messages.ru.xlf",
              "messages.es.xlf",
              "messages.zh.xlf"
            ]
          }
        }
      }
    }
  }
}